<mvc:View
    controllerName="logaligroup.proyecto1.controller.ButtonTheme"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <HBox class="sapUiSmallMargin">
        <Button
            text="Light"
            press=".onTheme"
            >
            <customData>
                <core:CustomData key="theme" value="sap_horizon" xmlns:core="sap.ui.core"/>
            </customData>
        </Button>
        <Button
            text="Dark"
            press=".onTheme"
            >
            <customData>
                <core:CustomData key="theme" value="sap_horizon_dark" xmlns:core="sap.ui.core"/>
            </customData>
        </Button>
    </HBox>
</mvc:View>
